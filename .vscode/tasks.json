{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "python",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "python",
            "args": [
                "${file}"
            ],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "problemMatcher": [],
            "options": {
                "env": {
                    "PYTHONPATH": "${env:PYTHONPATH}:${workspaceFolder}/app"
                }
            }
        },
        {
            "label": "unittest: Current File",
            "type": "shell",
            "command": "python -m unittest -v -b ${relativeFile}",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": true
            },
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": "^\\s+File \"(.*?)\", line ([0-9]+)[,]?.+?$",
                        "file": 1,
                        "location": 2,
                        "message": 3,
                    }
                ]
            },
            "options": {
                "env": {
                    "PYTHONPATH": "${env:PYTHONPATH}:${workspaceFolder}/app"
                }
            }
        },
        {
            "label": "nosetests: Current File",
            "type": "shell",
            "command": "nosetests -v --nologcapture ${relativeFile}",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": true
            },
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": "^\\s+File \"(.*?)\", line ([0-9]+)[,]?.+?$",
                        "file": 1,
                        "location": 2,
                        "message": 3,
                    }
                ]
            },
            "options": {
                "env": {
                    "PYTHONPATH": "${env:PYTHONPATH}:${workspaceFolder}/app"
                }
            }
        },
        {
            "label": "nosetests: All Files",
            "type": "shell",
            "command": "nosetests -v --nologcapture ${workspaceRoot}/tests",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": true
            },
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": "^\\s+File \"(.*?)\", line ([0-9]+)[,]?.+?$",
                        "file": 1,
                        "location": 2,
                        "message": 3,
                    }
                ]
            },
            "options": {
                "env": {
                    "PYTHONPATH": "${env:PYTHONPATH}:${workspaceFolder}/app"
                }
            }
        }
    ]
}
